@model HomeShop.Core.ViewModels.ProductListViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<div class="col-md-2">
    <h4>Filter by Catergory</h4>
    <div>
        @Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "list-group-item active" : "list-group-item" })
        @foreach(var category in Model.ProcductCategories)
        {
            @Html.ActionLink(category.Category, "Index", new { Category = category.Category}, new { @class = Request["Category"] == category.Category ? "list-group-item active" : "list-group-item" })
        }
    </div>
</div>
<div class="col-md-10">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-4 product-listing">
            <div class="col-md-12">
                <img class="img-responsive" src="~/Content/ProductImages/@item.Image" alt="@item.Image image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <p>@item.Price</p>
            </div>
            <div class="col-md-12">
                <a href="#" class="btn btn-default">Add to cart</a>
            </div>
        </div>
    }

</div>

